{
    "name": "ionicgib",
    "version": "0.0.1",
    "description": "Simple, powerful and open life-long learning, chat, todo, calendar, and much more...",
    "action": {
        "default_title": "ibgib",
        "default_icon": {
            "32": "/assets/icon/favicon.png",
            "64": "/assets/icon/favicon.png"
        }
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "content_security_policy": {
        "script-src": "'self' 'unsafe-eval'",
        "object-src": "'self'"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "js": [
                "injected.js"
            ]
        }
    ],
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "contextMenus",
        "tabs"
    ],
    "host_permissions": [
        "*://*/*"
    ],
    "manifest_version": 3
}
