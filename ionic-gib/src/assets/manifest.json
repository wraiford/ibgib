{
    "name": "ionicgib",
    "version": "0.0.1",
    "description": "Simple, powerful and open life-long learning, chat, todo, calendar, and much more...",
    "action": {
        "default_title": "ibgib",
        "default_icon": {
            "32": "/assets/icon/favicon.png",
            "64": "/assets/icon/favicon.png"
        }
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "content_security_policy": {
        "script-src": "'self' 'unsafe-eval'",
        "object-src": "'self'"
    },
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "unlimitedStorage",
        "contextMenus",
        "tabs"
    ],
    "host_permissions": [
        "*://*/*"
    ],
    "commands": {
        "enqueue_selection": {
            "suggested_key": {
                "default": "Ctrl+Shift+L",
                "mac": "MacCtrl+Shift+L"
            },
            "description": "Enqueue selected text to ibgib"
        },
        "_execute_action": {
            "suggested_key": {
                "windows": "Ctrl+Shift+Y",
                "mac": "Command+Shift+Y",
                "chromeos": "Ctrl+Shift+U",
                "linux": "Ctrl+Shift+J"
            }
        }
    },
    "manifest_version": 3
}
